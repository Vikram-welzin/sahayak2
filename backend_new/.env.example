# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sahayak

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# OpenAI Configuration (for AI-powered hiring assessments)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_RETRIES=2

# Assessment Configuration
# Options: 'openai' or 'rule-based'
ASSESSMENT_METHOD=openai
# Whether to use fallback if primary method fails
USE_ASSESSMENT_FALLBACK=true

# Google Places API (for loan suggestions)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Other configurations...
PORT=5000